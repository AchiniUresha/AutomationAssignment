	"item": [
		{
			"name": "Add List",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201and list created Succefully\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"const jsonData = pm.response.json();\r",
							"\r",
							"pm.test(\"Response contains list ID\", function () {\r",
							"    pm.expect(jsonData).to.have.property(\"id\");\r",
							"    pm.collectionVariables.set(\"listId\", jsonData.id);\r",
							"    console.log(\"Saved listId:\", jsonData.id);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"boardId\": 2,\r\n  \"name\": \"List Achini {{$randomInt}}\",\r\n  \"order\": 1\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:3000/api/lists",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"api",
						"lists"
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete List",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// ✅ Check that the listId variable is defined\r",
							"pm.test(\"listId is available and list deleted Succefully\", function () {\r",
							"    const listId = pm.collectionVariables.get(\"listId\");\r",
							"    pm.expect(listId).to.not.be.undefined;\r",
							"});\r",
							"\r",
							"// ✅ Check that the response status code is 200 (OK)\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200); // or 204 depending on your API\r",
							"});\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:3000/api/lists/{{listId}}",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"api",
						"lists",
						"{{listId}}"
					]
				}
			},
			"response": []
		}
	],
